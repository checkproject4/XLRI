<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/batch_name" android:layout_marginTop="20dp"
                    android:hint="Batch Name" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/batch_location" android:layout_marginTop="20dp"
                    android:hint="Batch Location" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/batch_teacher" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:hint="Batch Teacher"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/batch_time" android:layout_marginTop="20dp"
                    android:hint="Time :- HH:MM (24 hour format)"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/batch_days" android:layout_marginTop="20dp"
                    android:hint="Batch Days" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/batch_max_slots" android:layout_marginTop="20dp" android:hint="Batch Maximum Slots"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <Button
                    android:text="Create Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/save_batch_btn" android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:textSize="18sp"
            />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>