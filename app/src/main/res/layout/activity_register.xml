<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".register">

    <TextView
            android:text="Teacher Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_heading" android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" android:textSize="25sp" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerInParent="true">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_register" android:contentDescription="\" android:hint="Email Id"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_register" android:hint="Password"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/repassword_register" android:hint="Confirm Password"/>
        <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/register_user_btn"/>
    </LinearLayout>
</RelativeLayout>