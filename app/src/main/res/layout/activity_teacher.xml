<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".TeacherActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/batch_activity_click">

            <ImageView
                    android:id="@+id/teacher_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/batch_icon"
            />
            <TextView
                    android:text="Batches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>