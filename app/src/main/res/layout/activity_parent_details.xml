<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/parent_name" android:layout_marginTop="20dp"
                    android:hint="Enter Your Name" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/parent_age" android:layout_marginTop="20dp"
                    android:hint="Age   " android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/parent_sex" android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:hint="Male or Female"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/parent_email" android:layout_marginTop="20dp" android:hint="Enter Email"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/parent_phone" android:layout_marginTop="20dp"
                    android:hint="Enter Contact Number" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/parent_address" android:layout_marginTop="20dp" android:hint="Enter Your City"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/parent_interests"
                    android:layout_marginTop="20dp" android:hint="Enter Interests" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" android:textSize="24sp"/>
            <Button
                    android:text="Create Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/parent_profile_btn" android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:textSize="18sp"
            />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>